\begin{q}
  What is the domain of the function $(f/g)(x)$ where $f(x)= 2x-2$ and $g(x)=2x-2$?

  \vfill
\end{q}


\begin{q}
  Find $\lim\limits_{x \to \infty} \dfrac{12x^5+7x^2-7x}{5x^7-3x^4+3x^2}$.

  \vfill
\end{q}

\begin{q}
  Explain why the the following function does or does not have an inverse \\

  \includegraphics[scale=0.2]{assets/exam01_01.png}

  \vfill
\end{q}


\pagebreak % ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

\begin{q}
  Find $\lim\limits_{x \to -\infty} \dfrac{18x^5 + 4x^2 + 5x + 12}{6x^5 + 2x^2 - 5x}$

  \vfill
\end{q}

\begin{q}
  Find $\lim\limits_{x \to 1} f(x)$ for the function
  \(
    g(x)=
  \begin{cases}
    \dfrac{x^2-9}{x+3}, & x < -3 \\
    -x^2+3, & x \geq -3 \\
  \end{cases}
  \)

  \vfill
\end{q}

\begin{q}
  Find $\lim\limits_{x \to 5} \dfrac{ x-5 }{ x^2-25 }$.

  \vfill
\end{q}

\pagebreak % ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

\begin{q}
  Is the function
  \[
    f(x)=
    \begin{cases}
      \dfrac{x^2+2x-3}{x+3}, & x \neq -3 \\
      -4, & x = -3
    \end{cases}
  \]
  continuous at $x=-3$? How do you know?

  \vfill
\end{q}

\begin{q}
  Determine $\lim\limits_{x \to 0} \dfrac{5}{5x^2+10x}$.

  \vfill
\end{q}

\begin{q}
  Find two functions $f$ and $g$ so that $(f \circ g)(x) = \tan (2x^2)$.

  \vfill
\end{q}

\pagebreak % ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

\begin{q}
  Find $\lim\limits_{x \to 0} x^2\sin (3\pi x)$.

  \vfill
\end{q}

\begin{q}
  Use the definition of derivative to find $f'$ for $f(x)= \dfrac{1}{\sqrt{2x}}$.

  \vfill
\end{q}

\begin{q}
  Use the definition of derivative to find $f'$ for $f(x)=3x^2-6x-3$

  \vfill
\end{q}

