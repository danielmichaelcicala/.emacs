% question 1
\begin{q}[10 points]
  Graph the function
  \[
    f(x)=
    \begin{cases}
      -2x-1,    & x < 1;             \\
      1,        & -1 \leq x \leq 1;  \\
      2x-1,     & x > 1.             \\
    \end{cases}
  \]
\end{q}


